@model Order


@{
    ViewData["Title"] = "Order Confirmed";
    var item = Model;
    int v = item.ItemID;

    string P="";
    int PizzaN = v;
    switch (PizzaN)
    {
        case 1:
            P = "Meat Lovers";
            break;
        case 2:
            P = "Ranch Pizza";
            break;
        case 3:
            P = "Flavors Pizza";
            break;
        case 4:
            P = "Pepperoni";
            break;
    }
   
}

<h2>Order Confirmation</h2>
<h4 style="color:forestgreen">Your order has been confirmed successfuly !!</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <h4>Order info</h4>
        <form>
            <div class="form-group">
                <label asp-for="OrderID" class="control-label"></label>
                <input asp-for="OrderID" class="form-control" disabled="disabled" />
            </div>

            <div class="form-group">
                <label asp-for="ItemID" class="control-label"></label>
                <input asp-for="ItemID" class="form-control" disabled="disabled" />
            </div>
            <p>Selected Pizza</p>
            <input class="form-control" disabled="disabled"  value="@P" /><br>

            <!-- <div class="form-group">
     <label asp-for="Item.ItemName" class="control-label"></label>
     <input asp-for="Item.ItemName" class="form-control" disabled="disabled" />
    </div>-->
        </form>


    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-info"> < Back to Market</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}