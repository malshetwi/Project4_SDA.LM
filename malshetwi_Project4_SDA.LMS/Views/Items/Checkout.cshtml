@model Item

@{
    ViewData["Title"] = "Create Order";
    var item = Model;

}

<h2>Create Order</h2>
<h4>Define quantity with selected Pizza</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <h4>Selected Pizza</h4>
        <form asp-action="CreateOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ItemID" />
            <div class="form-group">
                <img class="img-rounded" src="~/images/Pizzas/@(item.ItemPicURL).png" alt="@item.ItemName" style="max-width:120%" /><br /><br />
                <label asp-for="ItemName" class="control-label">Pizza Name</label>
                <input asp-for="ItemName" class="form-control" disabled="disabled" />
                <span asp-validation-for="ItemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" disabled="disabled" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Quantity</label><br />
                <input id="Q" type="number" value="1" />
            </div>
           
            <div class="form-group">
                <input type="submit" value="Confirm >" class="btn btn-success" />
            </div>
        </form>
        <!--<input asp-action="CreateOrder" asp-route-id="@item.ItemID" type="submit" value="Confirm =" class="btn btn-success" />-->
        
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-info"> < Back to Market</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}